<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E91E63"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.wtww.MainActivity">


    <TextView
        android:id="@+id/wordLabelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/app_label"
        android:textAllCaps="true"
        android:textColor="#F2F2F2"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/wordNameView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/wordMeaningView"
        android:layout_alignParentStart="true"
        android:text="@string/word_name_text"
        android:textColor="@android:color/white"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/wordMeaningView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/word_meaning_text"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/showWordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:onClick="displayWeirdWord"
        android:text="@string/app_button"
        android:textColor="@color/colorAccent"
        android:textSize="24sp" />

</RelativeLayout>
